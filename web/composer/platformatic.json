{
  "$schema": "https://schemas.platformatic.dev/@platformatic/composer/2.9.1.json",
  "composer": {
    "graphql": {
      "graphiql": true
    },
    "services": [
      {
        "id": "artists",
        "openapi": {
          "url": "/documentation/json",
          "prefix": "/artists"
        },
        "graphql": true
      },
      {
        "id": "movies",
        "openapi": {
          "url": "/documentation/json",
          "prefix": "/movies"
        },
        "graphql": true
      },
      {
        "id": "songs",
        "openapi": {
          "url": "/documentation/json",
          "prefix": "/songs"
        },
        "graphql": true
      }
    ],
    "refreshTimeout": 1000
  },
  "server": {
    "hostname": "127.0.0.1",
    "port": 3010,
    "disableRequestLogging": true
  },
  "watch": true
